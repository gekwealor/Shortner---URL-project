{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "noEmit": true  // or "emitDeclarationOnly": true
  },
  "include": ["src"]
}
